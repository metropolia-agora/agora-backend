{
  "name": "agora-backend",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon --signal SIGTERM src/server.ts",
    "prod": "npm run build && node dist/server.js",
    "build": "rimraf dist && tsc",
    "lint": "eslint . --ext .ts && tsc --noEmit",
    "lint:fix": "eslint . --fix --ext .ts && tsc --noEmit",
    "gen-mock-data": "node scripts/generate-mock-data.js"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@casl/ability": "^5.4.3",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.18.2",
    "express-validator": "^6.13.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.3",
    "mysql2": "^2.3.3",
    "uuid": "^8.3.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.9",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.7",
    "@types/uuid": "^8.3.1",
    "@types/validator": "^13.6.6",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "eslint": "^8.2.0",
    "faker": "^5.5.3",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
